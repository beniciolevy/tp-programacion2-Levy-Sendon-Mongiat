<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
	
	<title> Mercado Liebre Argentina</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/style.css">
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<% if (usuario != undefined) { %>
		<%- include("./partials/headerLogueado", { usuario: usuario }) %>
	  <% } else { %>
		<%- include("./partials/header") %>
	  <% } %>
	  
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
		<%	if (perfil) { %>
			<div class="img-container offset-3 col-2">
				<% if (perfil.fotoPerfil){ %>
					<img src="/images/users/<%=perfil.fotoPerfil%>" alt="foto de perfil" class="foto-perfil">
				<% } else {%>
					<img src="/images/users/default-image.png" alt="foto por defecto" class="foto-perfil">
				<% } %>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=perfil.usuario%>
						<a href="/users/profile/<%=usuario.id%>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				
				<div>
					<%=perfil.email%>
				</div>

				<div>

					<ul class="">
						<li><%= productos.length %> productos</li>
					</ul>
				</div>
			</div>
		<% } else { %>
				<p>No estas logueado</p>
		<% } %>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>

			
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < productos.length; i++) {
				const producto = productos[i]; %>
		   <div class="col-12 col-sm-6 col-lg-3">
			   <section class="product-box">
				   <a href="/product/id/<%= producto.id  %>">
					   <figure class="product-box_image">
						   <img src="/images/products/<%= producto.foto %>" alt="<%= producto.nombreProducto %>"/>
					   </figure>
					   <article class="product-box_data">
						   <h2><%= producto.nombreProducto %> </h2>
						   <p><%= producto.descripcionProducto %></p>
						   <p>Comentarios: <%= producto.comentarios.length %></p>
					   </article>
				   </a>
			   </section>
			   
		   </div>
		   <% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>