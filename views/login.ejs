<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/style.css">
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form class="form-login"    action="/login" method="get">
				<div>
					<label for="usuario">Usuario:</label>
					<input type="email" name="usuario" id="usuario" required>
				</div>
				<div>
					<label for="contraseña">Contraseña:</label>
					<input type="password" name="password" id="recordarme" required>
				</div>

				<div>
					<label for="recordarme">Recordarme:</label>
					<input type="checkbox" name="recordarme" id="recordarme">
				</div>
				<div>
					<a href="/"><button type="button">Login</button> </a>
				</div>

			</form>



	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>