<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/style.css">
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<% if (usuario != undefined) { %>
		<%- include("./partials/headerLogueado", { usuario: usuario }) %>
	  <% } else { %>
		<%- include("./partials/header") %>
	  <% } %>
	  
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->

		
			<% if(productos.length !=0 ){ %>
				<% for (let i = 0; i < productos.length; i++) {
					const producto = productos[i]; %>
			   <div class="col-12 col-sm-6 col-lg-3">
				   <section class="product-box">
					   <a href="/product/id/<%= producto.id  %>">
						   <figure class="product-box_image">
							   <img src="/images/products/<%= producto.foto %>" alt="<%= producto.nombreProducto %>"/>
						   </figure>
						   <article class="product-box_data">
							   <h2><%= producto.nombreProducto %> </h2>
							   <p><%= producto.descripcionProducto %></p>
							   <p>Comentarios: <%= producto.comentarios.length %></p>
							   <a href="/users/profile/<%=producto.usuario.id%>"><%=producto.usuario.email%></a>
						   </article>
					   </a>
				   </section>
				   
			   </div>
			   <% } %>
				
			<% }else {%>
				<p>No se encontraron resultados para <%= search %></p>
				<% } %>

			
			
		 

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>